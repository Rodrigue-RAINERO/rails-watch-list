<div class="row d-flex justify-content-center mx-0">
  <div class="big-box-new-movie-reate col-8">
    <div class="new-lists">
      <div class="new-list">
        <h1>Create a new <strong>movie</strong> !</h1>
        <%= simple_form_for [ @movie ] do |f| %>
          <%= f.input :title, input_html: {class: "text-list-new-movie"} %>
          <%= f.input :overview, input_html: {class: "text-list-new-movie"} %>
          <%= f.input :rating, input_html: {class: "text-list-new-movie"} %>
          <%= f.input :poster_url, input_html: {class: "text-list-new-movie"} %>
          <%= f.submit "Submit", class: "btn btn-success btn-submit-new" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="div-btn-home">
  <%= link_to "Home", movies_path, class: "btn btn-success btn-home" %>
</div>
