<div class="row d-flex justify-content-center mx-0">
  <div class="big-box-new-movie-reate col-8">
    <div class="new-lists">
      <div class="new-list">
        <h1>Create a new <strong>bookmark</strong> !</h1>
        <%= simple_form_for [ @list, @bookmark ] do |f| %>
          <%= f.input :comment, input_html: {class: "text-list-new-movie"} %>
          <%= f.association :movie %>
          <%= f.submit "Submit", class: "btn-edit-show" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="div-btn-add">
  <%= link_to 'My lists', lists_path, class: "btn btn-success btn-my-list"%>
  <%= link_to "Home", movies_path, class: "btn btn-success btn-home" %>
</div>
